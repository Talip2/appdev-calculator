<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorExercise">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/Zero"
            android:textAlignment="viewEnd" />

        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:ems="10"
            android:inputType="phone"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:visibility="visible">


            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/btnCalcSeven"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"

                    android:text="@string/Seven" />

                <Button
                    android:id="@+id/btnCalcEight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Eight" />

                <Button
                    android:id="@+id/btnCalcNine"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Nine" />

                <Button
                    android:id="@+id/btnCalcDivide"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Divide" />
            </TableRow>

            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/btnCalcFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Four" />

                <Button
                    android:id="@+id/btnCalcFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Five" />

                <Button
                    android:id="@+id/btnCalcSix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Six" />

                <Button
                    android:id="@+id/btnCalcMultiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Multiply" />
            </TableRow>

            <TableRow
                android:id="@+id/row3"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/btnCalcOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/One" />

                <Button
                    android:id="@+id/btnCalcTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Two" />

                <Button
                    android:id="@+id/btnCalcThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Three" />

                <Button
                    android:id="@+id/btnCalcMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Minus" />
            </TableRow>

            <TableRow
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/btnCalcZero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Zero" />

                <Button
                    android:id="@+id/btnCalcDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Decimal" />

                <Button
                    android:id="@+id/btnCalcPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Plus" />

                <Button
                    android:id="@+id/btnCalcEqual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Equal" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>